<div class="row">
    <div class="col-12">
      <p id="notice"><%= notice %></p>
      <p id="notice"><%= alert %></p>
      <div>
        <strong class="information-link"><h3>ショッピングカート</h3></strong>
        <%= link_to "カートを空にする", customers_cart_products_path, method: :delete, class: "pull-right btn btn-danger" %>
      </div>
        <table class="table table-hover table-bordered col-xs-10" >
         <thead>
          <tr class="info">
            <th class="col-3">商品名</th>
            <th class="col-2">単価（税込み）</th>
            <th class="col-2">数量</th>
            <th class="col-1">小計</th>
            <th class="col-1"></th>
          </tr>
         </thead>
         <tbody>
           <% @cart_products.each do |cart_product| %>
          <tr>
            <td class="col-3"><%= cart_product.product.name %></td>
            <td class="col-2">¥<%= ((cart_product.product.price * 1.1).floor).to_s(:delimited, delimiter: ',') %></td>
            <td class="col-1">
              <%= form_for(cart_product, url: customers_cart_product_path(cart_product)) do |c| %>
              <p>
                <%= c.number_field :amount, min:1, max:10000, step:1 %>
                <%= c.submit "変更", class: "btn btn-primary" %>
              </p>
              <% end %>
            </td>
            <td class="col-1">
              ¥<%= ((cart_product.product.price * cart_product.amount * 1.1).floor).to_s(:delimited, delimiter: ',') %>
            </td>
            <td class="col-1">
              <%= link_to "削除する", customers_cart_product_path(cart_product.id), method: :DELETE, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
         </tbody>
        </table>
    </div>
</div>

<div class="col-8">
    <span>
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
    </span>
</div>
<div class="col-3 offset-md-9">
    <table class="table table-bordered">
        <tr>
            <td class="info col-2"><strong>合計金額</strong></td>
            <td class="col-1">¥<%= @total_price.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
    </table>
</div>

<div class = "col-4 offset-4">
    <span>
        <%= link_to "情報入力に進む", confirm_customers_orders_path, class: "col-12 btn btn-success"%>
    </span>
    </div>
</div>