<div class='col-lg-2'>
    <h5>商品新規登録</h5>
</div>

        <div class ="danger"><%= flash[:danger] %></div>

    <%= form_with(model: @product, url: admin_products_path, method: :post, local: true) do |f| %>
        <table align="center">
        	<tr>
        		<th><%= f.label :image %></th>
                <td><%= f.attachment_field :image %></td>
        	</tr>
            <tr>
                <th><%= f.label :商品名 %></th>
            	<td><%= f.text_field :name, class: "form" %></td>
            </tr>
            <tr>
            	<th><%= f.label :商品説明 %></th>
            	<td><%= f.text_area :explanation %></td>
            </tr>
            <tr>
            	<th><%= f.label :ジャンル %></th>
            	<td><%= f.collection_select(:genre_id, Genre.where(is_genres_status: true), :id, :name, prompt: "選択してください") %></td>
            </tr>
            <tr>
            	<th><%= f.label :税抜価格 %></th>
            	<td>￥<%= f.text_field :price %></td>
            </tr>
            <tr>
                <th>販売ステータス</th>
                <td>
                	<%= f.radio_button :sales_status, true  %>
                	<%= f.label :sales_status, "販売中" %>
                    <%= f.radio_button :sales_status, false %>
                    <%= f.label :sales_status, "販売停止中" %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.submit "新規登録",class:"btn btn-success" %>
                    <% end %>
                </td>
            </tr>
        </table>
